<div>
    <h1> update your book </h1>
    <form method="POST">
  <div>
    <input
      type="text"
      name="title"
      placeholder="Titre du livre"
      value="{{ book.title }}"
      required
    />
  </div>
  <div>
    <textarea name="description" placeholder="Description du livre">
{{ book.description }}</textarea
    >
  </div>
  <div>
    <input
      type="text"
      name="genre"
      placeholder="Genre du livre"
      value="{{ book.genre }}"
    />
  </div>
  <div>
    <button type="submit">Envoyer</button>
  </div>
</form>
</div>